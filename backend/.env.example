# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=your_mongodb_connection_string_here

# Google OAuth - Teacher Login
GOOGLE_CLIENT_ID=your_teacher_client_id_here
GOOGLE_CLIENT_SECRET=your_teacher_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Google OAuth - Student Drive Access
STUDENT_CLIENT_ID=your_student_client_id_here
STUDENT_CLIENT_SECRET=your_student_client_secret_here
STUDENT_CALLBACK_URL=http://localhost:3000/auth/student/callback

# College Domain
COLLEGE_DOMAIN=slrtce.in

# Session Secret (Generate random string)
SESSION_SECRET=your_random_secret_key_here

# Email Configuration (Brevo SMTP)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USER=your_brevo_email_here
EMAIL_PASSWORD=your_brevo_smtp_key_here
EMAIL_FROM=SLRTCE File Manager <noreply@slrtce.in>

# Application URLs
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:8000
